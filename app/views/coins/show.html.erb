<% for x in @show_coin %>
  <% if @coin.symbol.upcase == x["symbol"] %>
  
      <% coin_name = x["name"] %>
      <% coin_price = x["price_usd"] %>
      <% coin_rank = x["rank"] %>
      <% coin_hour = x["percent_change_1h"] %>
      <% coin_day = x["percent_change_24h"] %>
      <% coin_week = x["percent_change_7d"] %>
  <% end %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= coin_name %></h3>
  </div>
  <div class="coin-list">
    <div class="panel-body">
      <i><h1><%= @coin.symbol.upcase %></h1>
      
      <br/><br/>
      
      <p>
        <strong>Current value: </strong><%= number_to_currency(coin_price) %>
      </p>
      
      <p>
        <strong>Current rank: </strong><%= coin_rank %>
      </p>
      
      <p>
        <strong>Cost bought at: </strong><%= number_to_currency(@coin.cost_per) %>
      </p>
      
      <p>
        <strong>Amount owned: </strong><%= @coin.amount_owned %>
      </p></i>
      
      <br/><br/>
      
      <p>
        <h5>Price Change</h5>
      </p>
      <table class="table table-striped table-bordered table-hover coin-list">
        <tr>
          <td><strong>Hour</strong></td>
          <td><%= coin_hour %></td>
        </tr>
        <tr>
          <td><strong>Day</strong></td>
          <td><%= coin_day %></td>
        </tr>
        <tr>
          <td><strong>Week</strong></td>
          <td><%= coin_week %></td>
        </tr>
      </table>
    </div>  
    
  </div>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_coin_path(@coin) %> |
    <%= link_to 'Delete', coin_path(@coin), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', coins_path %> 
  </div>
</div>



